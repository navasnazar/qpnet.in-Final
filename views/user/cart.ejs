    <script>
      function prodQtyChange(userID, ProdId, qtyNow, count){
        count = parseInt(count)
        $.ajax({
          url:'/changeQuantity',
          data:{
            user: userID,
            product: ProdId,
            qtyNow: qtyNow,
            count: count
          },
          method: 'post',
          success:(response)=>{
            if(response.change){
              location.reload()
            }
          }
        })
      }

    </script>

